{
  "name": "bc-dl",
  "version": "0.1.0",
  "description": "youtube-dl for Bandcamp, with mp3 tags",
  "main": "lib/index.js",
  "repository": "https://github.com/Gurimarukin/bc-dl.git",
  "author": "Gurimarukin",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "dl": "node --unhandled-rejections=strict lib/dl.js",
    "tag": "node --unhandled-rejections=strict lib/tag.js",
    "ts-dl": "NODE_OPTIONS='--unhandled-rejections=strict' ts-node src/dl.ts",
    "ts-tag": "NODE_OPTIONS='--unhandled-rejections=strict' ts-node src/tag.ts",
    "prettier": "prettier --check \"./{src,test}/**/*.ts\"",
    "prettier-fix": "prettier --write \"./{src,test}/**/*.ts\"",
    "import-sort": "import-sort --list-different \"./{src,test}/**/*.ts\"",
    "import-sort-fix": "import-sort --write \"./{src,test}/**/*.ts\"",
    "lint": "eslint --cache --max-warnings 0 --ext .ts src test",
    "lint-fix": "eslint --fix --cache --max-warnings 0 --ext .ts src test",
    "jest": "jest",
    "jest-unit": "jest --testPathPattern=.*\\.spec\\.ts",
    "jest-coverage": "jest --ci --coverage",
    "style": "yarn run prettier && yarn run import-sort && yarn run lint",
    "test": "yarn run style && yarn run jest-unit"
  },
  "devDependencies": {
    "@type-config/strict": "^1.1.1",
    "@types/jest": "^26.0.20",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "axios": "^0.21.1",
    "decline-ts": "^0.9.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-fp-ts": "^0.1.12",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-prettier": "^3.3.1",
    "fp-ts": "^2.9.3",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "io-ts": "^2.2.13",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "monocle-ts": "^2.3.5",
    "newtype-ts": "^0.3.4",
    "node-id3": "^0.2.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "importSort": {
    ".js, .ts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "dependencies": {
    "@types/jsdom": "^16.2.6"
  }
}
